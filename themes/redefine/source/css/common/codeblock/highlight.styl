$code-block {
  -webkit-text-size-adjust: none;
  overflow: auto;
  margin: 20px 0;
  padding: 0;
  font-size 0.96rem;
  line-height: 1.5rem;
  color: var(--highlight-foreground);
  background: var(--highlight-background);
}


pre, code {
  font-family: 'Fira Code', 'Courier', Courier, monospace;
  font-weight: 500;
}

code {
  padding: 4px;
  word-wrap: break-word;
  border-radius: 4px;
  font-size: 0.96em;
  color: var(--code-foreground);
  background: var(--code-background);
}

pre {
  @extend $code-block;
  padding: 10px;

  code {
    padding: 0;
    color: var(--highlight-foreground);
    background: none;
    text-shadow: none;
  }
}

.highlight {
  @extend $code-block;
  border-radius: 0 0 18px 18px;
  padding-bottom: 25px;

  pre {
    border: none;
    margin: 0;
    padding: 10px 0;
  }


  table {
    margin: 0;
    width: auto;
    border: none;
    border-spacing: unset;
  }


  td {
    border: none;
    padding: 0;
  }

  figcaption {
    font-size: 1rem;
    color: var(--highlight-foreground);
    line-height: 1rem;
    margin-bottom: 1rem;

    a {
      float: right;
      color: var(--highlight-foreground);

      &:hover {
        border-bottom-color: var(--highlight-foreground);
      }
    }
  }

  .gutter pre {
    padding-left: 10px;
    padding-right: 10px;
    color: var(--highlight-gutter-color);
    text-align: center;
    background-color: var(--highlight-gutter-bg-color);
  }

  .code pre {
    width: 100%;
    padding-left: 10px;
    padding-right: 10px;
    background-color: var(--highlight-background);
  }

  .line {
    height: 20px;
    color: #bebec6;

    .attr {
      color: #9CDCFE;
    }

    .string {
      color: #D69D85;;
    }

  }
}


.gutter {
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.gist table {
  width: auto;

  td {
    border: none;
  }
}

// For diff highlight
pre .deletion {
  background: #600;
  width: 100%;
}

pre .addition {
  background: #144212;
  width: 100%;
}

pre .meta {
  color: #569CD6;
}

pre {

  .keyword,
  .literal,
  .symbol,
  .name {
    color: #569CD6;
  }
  .link {
    color: #569CD6;
    text-decoration: underline;
  }
  
  .built_in,
  .type {
    color: #4EC9B0;
  }
  
  .number,
  .class {
    color: #B8D7A3;
  }
  
  .string,
  .meta .string {
    color: #D69D85;
  }
  
  .regexp,
  .template-tag {
    color: #9A5334;
  }
  
  .subst,
  .function,
  .title,
  .params,
  .formula {
    color: #DCDCDC;
  }
  
  .comment,
  .quote {
    color: #57A64A;
    font-style: italic;
  }
  
  .doctag {
    color: #608B4E;
  }
  
  .meta,
  .meta .keyword,
  .tag {
    color: #9B9B9B;
  }
  
  .variable,
  .template-variable {
    color: #BD63C5;
  }
  
  .attr,
  .attribute {
    color: #9CDCFE;
  }
  
  .section {
    color: gold;
  }
  
  .emphasis {
    font-style: italic;
  }
  
  .strong {
    font-weight: bold;
  }
  
  /*.code {
    font-family:'Monospace';
  }*/
  
  .bullet,
  .selector-tag,
  .selector-id,
  .selector-class,
  .selector-attr,
  .selector-pseudo {
    color: #D7BA7D;
  }
}
